{
  "plugins": [
    "prettier",
    "import",
    "unused-imports"
  ],
  "extends": [
    "next/core-web-vitals",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "@next/next/no-img-element": "off",
    "@next/next/no-html-link-for-pages": ["error", "renderer/pages"],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "always",
        "printWidth": 120,
        "singleQuote": true,
        "semi": false
      }
    ],
    "import/order": [
      "error",
      {
        "alphabetize": {
          "order": "asc"
        }
      }
    ],
    "unused-imports/no-unused-imports": "error"
  }
}
